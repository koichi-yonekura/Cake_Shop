<h2>ジャンル編集</h2>

  <%= form_for(@category, url: '/admin/categories/:id') do |f| %>

    <a>ジャンル</a>
    <%= f.text_field :name %>
      <label><%= f.radio_button :is_active, "有効" %>有効</label>
      <label><%= f.radio_button :is_active, "無効" %>無効</label>
    <%= f.submit '変更を保存する', class: "btn btn-primary btn-block" %>

  <% end %>
